                        BorderColor="Black"
                        BorderWidth="1"
                        Clicked="OnButtonClicked"
                        HorizontalOptions="Center"
                        Text="R" />
                    <Button
                        BorderColor="Black"
                        BorderWidth="1"
                        Clicked="OnButtonClicked"
                        HorizontalOptions="Center"
                        Text="T" />
                    <Button
                        BorderColor="Black"
                        BorderWidth="1"
                        Clicked="OnButtonClicked"
                        HorizontalOptions="Center"
                        Text="Y" />
                    <Button
                        BorderColor="Black"
                        BorderWidth="1"
                        Clicked="OnButtonClicked"
                        HorizontalOptions="Center"
                        Text="U" />
                    <Button
                        BorderColor="Black"
                        BorderWidth="1"
                        Clicked="OnButtonClicked"
                        HorizontalOptions="Center"
                        Text="I" />
                    <Button
                        BorderColor="Black"
                        BorderWidth="1"
                        Clicked="OnButtonClicked"
                        HorizontalOptions="Center"
                        Text="O" />
                    <Button
                        BorderColor="Black"
                        BorderWidth="1"
                        Clicked="OnButtonClicked"
                        HorizontalOptions="Center"
                        Text="P" />
                </HorizontalStackLayout>
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="1">
                    <Button
                        BorderColor="Black"
                        BorderWidth="1"
                        Clicked="OnButtonClicked"
                        HorizontalOptions="Center"
                        Text="A" />
                    <Button
                        BorderColor="Black"
                        BorderWidth="1"
                        Clicked="OnButtonClicked"
                        HorizontalOptions="Center"
                        Text="S" />
                    <Button
                        BorderColor="Black"
                        BorderWidth="1"
                        Clicked="OnButtonClicked"
                        HorizontalOptions="Center"
                        Text="D" />
                    <Button
                        BorderColor="Black"
                        BorderWidth="1"
                        Clicked="OnButtonClicked"
                        HorizontalOptions="Center"
                        Text="F" />
                    <Button
                        BorderColor="Black"
                        BorderWidth="1"
                        Clicked="OnButtonClicked"
                        HorizontalOptions="Center"
                        Text="G" />
                    <Button
                        BorderColor="Black"
