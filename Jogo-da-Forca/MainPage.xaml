<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Jogo_da_Forca.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <FlexLayout Direction="Column" JustifyContent="SpaceBetween">
            <VerticalStackLayout
                Padding="3"
                HorizontalOptions="End"
                Spacing="2">
                <Button
                    BorderColor="Black"
                    BorderWidth="1"
                    Clicked="OnButtonClickedResetGame"
                    Text="Reiniciar" />
                <Button
                    BorderColor="Black"
                    BorderWidth="1"
                    Clicked="ChangeTheme"
                    Text="Mode" />
            </VerticalStackLayout>
            <Image
                x:Name="imgMain"
                Margin="0,-15,0,0"
                HeightRequest="200"
                HorizontalOptions="Center"
                Source="forca1.png" />

            <Label
                x:Name="lblTips"
                FontSize="32"
                HorizontalOptions="Center"
                Text="" />

            <Label
                x:Name="lblText"
                CharacterSpacing="5"
                FontSize="36"
                HorizontalOptions="Center"
                Text="" />

            <VerticalStackLayout x:Name="KeyBoardContainer" Spacing="2">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="1">
                    <Button
                        BorderColor="Black"
                        BorderWidth="1"
                        Clicked="OnButtonClicked"
                        HorizontalOptions="Center"
                        Text="Q" />
