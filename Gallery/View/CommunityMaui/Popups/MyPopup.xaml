<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="Gallery.View.CommunityMaui.Popups.MyPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="False"
    HorizontalOptions="Center"
    Size="400, 200"
    VerticalOptions="End"
    Color="Red">
    <Border Padding="20">
        <VerticalStackLayout>
            <Button
                Clicked="OnClickedToCloseScreen"
                HorizontalOptions="EndAndExpand"
                Text="X" />
            <Label Text="Digite seu email para receber novidades!" />
            <Entry Placeholder="Digite seu e-mail" />
            <Button Clicked="OnClickedToCloseScreen" Text="Enviar" />
        </VerticalStackLayout>
    </Border>
</toolkit:Popup>