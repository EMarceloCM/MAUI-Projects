<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Gallery.View.Components.Forms.RadioButtonPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="RadioButtonPage">
    <VerticalStackLayout Padding="10">
        <StackLayout>
            <Label
                HorizontalOptions="Start"
                Text="Qual linguagem voce mais gosta?"
                VerticalOptions="Center" />
            <RadioButton Content="C#" />
            <RadioButton Content="Java" />
            <RadioButton Content="Dart" />
        </StackLayout>
        <StackLayout>
            <Label
                HorizontalOptions="Start"
                Text="Qual o mascote do .NET MAUI ?"
                VerticalOptions="Center" />
            <RadioButton
                BorderColor="Yellow"
                BorderWidth="1"
                CornerRadius="8">
                <RadioButton.Content>
                    <HorizontalStackLayout>
                        <Label Text="C#" />
                        <Image HeightRequest="100" Source="dotnet_bot.png" />
                    </HorizontalStackLayout>
                </RadioButton.Content>
            </RadioButton>
            <RadioButton Content="Java" />
            <RadioButton Content="Objective-C" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>