<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="ShoppingCenter.Resources.Styles.ExplicitStyles"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style x:Key="PrimaryText" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
        <Setter Property="FontFamily" Value="#OpenSansBold" />
        <Setter Property="TextTransform" Value="Uppercase" />
    </Style>
    <Style x:Key="SecondaryText" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="#A0A0A0" />
        <Setter Property="FontFamily" Value="#OpenSansLight" />
    </Style>
    <Style x:Key="TercearyText" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#404040, Dark={StaticResource Gray300}}" />
        <Setter Property="FontFamily" Value="#OpenSansRegular" />
    </Style>
    <Style x:Key="DurationText" TargetType="Label">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="TextColor" Value="#000000" />
        <Setter Property="FontFamily" Value="#OpenSansLight" />
    </Style>
    <Style x:Key="HeadingText" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
        <Setter Property="FontFamily" Value="#OpenSansBold" />
    </Style>
    <Style x:Key="DetailText" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#A0A0A0, Dark=#A0A0A0}" />
        <Setter Property="FontFamily" Value="#OpenSansRegular" />
    </Style>


    <Style x:Key="HeadingBase" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
    </Style>

    <Style
        x:Key="HeadingText01"
        BasedOn="{StaticResource HeadingBase}"
        TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
    </Style>
    <Style
        x:Key="HeadingText02"
        BasedOn="{StaticResource HeadingBase}"
        TargetType="Label">
        <Setter Property="TextColor" Value="#FF5524" />
    </Style>

    <Style x:Key="BorderStyle" TargetType="Border">
        <Setter Property="Stroke" Value="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
        <Setter Property="StrokeShape" Value="RoundRectangle 5" />
        <Setter Property="StrokeThickness" Value="1" />
    </Style>

    <Style x:Key="BorderDotStyle" TargetType="Border">
        <Setter Property="Margin" Value="0,10,0,0" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="StrokeDashArray" Value="3,3" />
    </Style>

    <Style x:Key="ButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#FF5524" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#FFFFFF, Dark=#000000}" />
    </Style>

    <Style x:Key="ToleranceText" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>
    <Style x:Key="ToleranceMinutesText" TargetType="Label">
        <Setter Property="TextColor" Value="#FF5524" />
        <Setter Property="FontSize" Value="48" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
    </Style>
</ResourceDictionary>