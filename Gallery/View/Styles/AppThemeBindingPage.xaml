<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Gallery.View.Styles.AppThemeBindingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="AppThemeBindingPage"
    BackgroundColor="{AppThemeBinding Light={StaticResource Blue300Accent},
                                      Dark={StaticResource Blue100Accent},
                                      Default={StaticResource Blue200Accent}}">
    <VerticalStackLayout>
        <Label
            HorizontalOptions="Center"
            Text="{AppThemeBinding Light='Tema Claro',
                                   Dark='Tema Escuro',
                                   Default='Tema Personalizado'}"
            VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>