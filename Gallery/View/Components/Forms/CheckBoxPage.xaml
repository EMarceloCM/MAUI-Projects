<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Gallery.View.Components.Forms.CheckBoxPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CheckBoxPage">
    <VerticalStackLayout>
        <Label
            x:Name="lblTxt"
            HorizontalOptions="Center"
            Text="Qual a linguagem que voce mais gosta?"
            VerticalOptions="Center" />
        <HorizontalStackLayout>
            <CheckBox CheckedChanged="CheckBox_CheckedChanged" Color="Yellow" />
            <Label Text="PHP" VerticalOptions="Center" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <CheckBox CheckedChanged="CheckBox_CheckedChanged" Color="Purple" />
            <Label Text="C#" VerticalOptions="Center" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <CheckBox CheckedChanged="CheckBox_CheckedChanged" Color="Red" />
            <Label Text="Java" VerticalOptions="Center" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>