<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Gallery.View.Components.Visuals.BorderPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="BorderPage">
    <VerticalStackLayout>
        <Border
            Padding="10"
            Stroke="blue"
            StrokeDashArray="1,1,3,1,5,2"
            StrokeLineJoin="Bevel"
            StrokeThickness="3" StrokeDashOffset="4" StrokeLineCap="Round">
            <Label
                HorizontalOptions="Center"
                Text="Welcome to .NET MAUI!"
                VerticalOptions="Center" />
        </Border>
    </VerticalStackLayout>
</ContentPage>