<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Gallery.View.Components.Visuals.ShadowPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ShadowPage">
    <VerticalStackLayout Padding="30">
        <Border Padding="10" BackgroundColor="#FFFFFF">
            <Border.Shadow>
                <Shadow
                    Brush="#ff0000"
                    Opacity="1"
                    Radius="7"
                    Offset="10, 10" />
            </Border.Shadow>
            <Label
                HorizontalOptions="Center"
                Text="Welcome to .NET MAUI!"
                TextColor="#000000"
                VerticalOptions="Center" />
        </Border>
    </VerticalStackLayout>
</ContentPage>